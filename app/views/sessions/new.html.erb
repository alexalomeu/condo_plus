<div class="container-fluid vh-100 d-flex flex-column flex-lg-row p-0">
  <!-- Lado Esquerdo: Login -->
  <div class="col-12 col-lg-6 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-sm p-4 p-sm-5" style="max-width: 400px; width: 100%;">
      <div class="text-center mb-4">
        <%= image_tag "condo-logo.png", alt: "Condo+ Logo", class: "mb-3 img-fluid", style: "max-height: 80px;" %>
        <p class="text-blue-muted small mb-0">Gestão Inteligente de Condomínios</p>
      </div>

      <%= form_with url: sessions_path, local: true, class: "mt-4" do |f| %>
        <div class="mb-3">
          <%= f.label :email, "E-mail", class: "form-label" %>
          <%= f.email_field :email, placeholder: "seu@email.com", class: "form-control form-control-lg" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, "Senha", class: "form-label" %>
          <%= f.password_field :password, placeholder: "••••••••", class: "form-control form-control-lg" %>
        </div>

        <%= f.submit "Entrar", class: "btn btn-primary w-100 py-2 fw-semibold" %>
      <% end %>

      <div class="text-center mt-4">
        <%= link_to "Cadastrar-se", "#", class: "d-block text-decoration-none text-blue fw-semibold" %>
        <%= link_to "Esqueci minha senha", "#", class: "d-block text-blue-muted small mt-2" %>
      </div>
    </div>
  </div>

  <!-- Lado Direito: Imagem e texto -->
  <div class="col-12 col-lg-6 position-relative d-none d-lg-block p-0">
    <%= image_tag "condo-hero.jpg", class: "w-100 h-100 object-fit-cover", alt: "Gestão de Condomínios" %>
    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column align-items-center justify-content-center text-center text-white" style="background-color: rgba(0, 27, 104, 0.4);">
      <h2 class="fw-bold display-6 mb-3">Simplifique a Gestão do seu Condomínio</h2>
      <p class="fs-5 mb-0">Tecnologia e eficiência em um só lugar</p>
    </div>
  </div>
</div>