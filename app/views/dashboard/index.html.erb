<div class="container">
  <!-- Título -->
  <div class="mb-5">
    <h2 class="fw-bold">Dashboard</h2>
    <span class="text-blue-muted">Visão geral do seu negócio</span>
  </div>

  <!-- Cards de Estatísticas -->
  <div class="row g-4 mb-5">
    <% stats = [
      { title: "Total de Condomínios", value: "24", icon: "bi-buildings", trend: "+12%", color: "primary" },
      { title: "Total de Síndicos", value: "18", icon: "bi-people", trend: "+8%", color: "info" },
      { title: "Imobiliárias Parceiras", value: "6", icon: "bi-building", trend: "+2", color: "secondary" },
      { title: "Cobranças Pendentes", value: "R$ 45.800", icon: "bi-cash-coin", trend: "-5%", color: "danger" }
    ] %>

    <% stats.each do |stat| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card shadow-sm border-0 h-100">
          <div class="card card-body d-flex flex-column justify-content-between">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h6 class="text-blue-muted mb-0"><%= stat[:title] %></h6>
              <div class="p-2 bg-<%= stat[:color] %>-subtle rounded">
                <i class="bi <%= stat[:icon] %> text-<%= stat[:color] %> fs-5"></i>
              </div>
            </div>
            <h3 class="fw-bold mb-0 text-blue"><%= stat[:value] %></h3>
            <small 
              class="text-blue-muted" 
              style="margin-top: 0.5rem; font-size: 0.75em;">
              <i class="bi bi-graph-up"></i> <%= stat[:trend] %> vs mês anterior
            </small>          
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Sessão de Gráficos -->
  <div class="row g-4 justify-content-between">
    <!-- Card de Cobranças -->
    <div class="col-md-6 card">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-white border-0">
          <h5 class="mb-0 text-blue">Cobranças</h5>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <div class="d-flex justify-content-between">
              <span class="text-blue-muted">Pendentes</span>
              <strong>R$ 45.800</strong>
            </div>
            <div class="progress mt-2" style="height: 8px;">
              <div class="progress-bar bg-danger" style="width: 65%;"></div>
            </div>
          </div>

          <div>
            <div class="d-flex justify-content-between">
              <span class="text-blue-muted">Concluídas</span>
              <strong>R$ 124.200</strong>
            </div>
            <div class="progress mt-2" style="height: 8px;">
              <div class="progress-bar bg-success" style="width: 85%;"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Card de Atividades Recentes -->
    <div class="col-md-5 card">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-white border-0">
          <h5 class="mb-0 text-blue">Atividades Recentes</h5>
        </div>
        <div class="card-body">
          <% activities = [
            { action: "Novo condomínio cadastrado", time: "Há 2 horas" },
            { action: "Cobrança aprovada", time: "Há 4 horas" },
            { action: "Síndico aguardando aprovação", time: "Há 6 horas" },
            { action: "Mensagem recebida", time: "Há 8 horas" }
          ] %>

          <% activities.each do |a| %>
            <div class="d-flex align-items-start mb-3">
              <i class="bi bi-clock me-3 fs-5"></i>
              <div>
                <p class="mb-0 fw-semibold"><%= a[:action] %></p>
                <small class="text-blue-muted"><%= a[:time] %></small>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
