<div class="d-flex align-items-center mb-4">
  <div class="d-flex align-items-center mb-3">
    <%= link_to "javascript:history.back()", class: "text-decoration-none text-blue me-3 d-flex align-items-center" do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
    <div>
      <h2 class="fw-bold mb-0">
        <%= @manager.persisted? ? "Editar Síndico" : "Novo Síndico" %>
      </h2>
    </div>
  </div>
</div>

<%= form_with(model: manager, local: true, class: "needs-validation") do |f| %>
  <div class="card shadow-sm p-4">
    <div class="row g-3">

      <div class="col-md-6">
        <%= f.label :name, "Nome Completo", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="col-md-3">
        <%= f.label :cpf, "CPF", class: "form-label" %>
        <%= f.text_field :cpf, class: "form-control" %>
      </div>

      <div class="col-md-3">
        <%= f.label :phone, "Telefone", class: "form-label" %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :email, "E-mail", class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :condominium_id, "Condomínio", class: "form-label" %>
        <%= f.collection_select :condominium_id, Condominium.all, :id, :nome, { prompt: "Selecione" }, { class: "form-select" } %>
      </div>

      <div class="col-md-4">
        <%= f.label :gender, "Gênero", class: "form-label" %>
        <%= f.select :gender, ["Masculino", "Feminino"], {}, class: "form-select" %>
      </div>

      <div class="col-md-4">
        <%= f.label :birth_date, "Data de Nascimento", class: "form-label" %>
        <%= f.date_field :birth_date, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= f.label :marital_status, "Estado Civil", class: "form-label" %>
        <%= f.select :marital_status, ["Solteiro(a)", "Casado(a)", "Divorciado(a)"], {}, class: "form-select" %>
      </div>

      <div class="col-md-4">
        <%= f.label :admission_date, "Data de Admissão", class: "form-label" %>
        <%= f.date_field :admission_date, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= f.label :contract_type, "Tipo de Contrato", class: "form-label" %>
        <%= f.select :contract_type, ["CLT", "Autônomo", "Prestador"], {}, class: "form-select" %>
      </div>

      <div class="col-md-4">
        <%= f.label :creci, "CRECI", class: "form-label" %>
        <%= f.text_field :creci, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :address, "Endereço", class: "form-label" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="col-md-3">
        <%= f.label :number, "Número", class: "form-label" %>
        <%= f.text_field :number, class: "form-control" %>
      </div>

      <div class="col-md-3">
        <%= f.label :zip_code, "CEP", class: "form-label" %>
        <%= f.text_field :zip_code, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= f.label :neighborhood, "Bairro", class: "form-label" %>
        <%= f.text_field :neighborhood, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= f.label :city, "Cidade", class: "form-label" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= f.label :complement, "Complemento", class: "form-label" %>
        <%= f.text_field :complement, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :courses, "Cursos", class: "form-label" %>
        <%= f.text_field :courses, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :status, "Status", class: "form-label" %>
        <%= f.select :status, ["Ativo", "Inativo", "Pendente"], {}, class: "form-select" %>
      </div>

      <div class="col-12 text-end mt-4">
        <%= f.submit "Salvar", class: "btn btn-primary" %>
        <%= link_to "Cancelar", managers_path, class: "btn btn-danger ms-2" %>
      </div>
    </div>
  </div>
<% end %>
