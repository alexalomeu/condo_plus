<div class="container my-4">
  <!-- Header -->
  <div class="d-flex align-items-center mb-4">
    <div class="d-flex align-items-center mb-3">
      <%= link_to real_estates_path, class: "text-decoration-none me-3 text-dark" do %>
        <i class="bi bi-arrow-left"></i>
      <% end %>
      <div>
        <h2 class="fw-bold mb-0">Relatório de Monetização - <%= @real_estate.name %></h2>
        <small class="text-blue-muted">Histórico de monetização por condomínio</small>
      </div>
    </div>
  </div>

  <!-- Filtros -->
  <div class="card shadow-sm border-0 rounded-4 mb-4 p-4">
    <%= form_with url: revenue_real_estate_path(@real_estate.id), method: :get, local: true, class: "row g-3" do %>
      <div class="col-md-4">
        <label class="form-label fw-semibold">Condomínio</label>
        <select name="condominium" class="form-select">
          <option value="all" <%= "selected" if params[:condominium] == "all" %>>Todos</option>
          <% @condominiums.each do |condo| %>
            <option value="<%= condo.nome %>" <%= "selected" if params[:condominium] == condo.nome %>>
              <%= condo.nome %>
            </option>
          <% end %>
        </select>
      </div>

      <div class="col-md-4">
        <label class="form-label fw-semibold">Data Inicial</label>
        <input type="date" name="start_date" class="form-control" value="<%= params[:start_date] %>">
      </div>

      <div class="col-md-4">
        <label class="form-label fw-semibold">Data Final</label>
        <input type="date" name="end_date" class="form-control" value="<%= params[:end_date] %>">
      </div>

      <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary px-4 fw-semibold">
          <i class="bi bi-funnel me-1"></i>
          Filtrar
        </button>

        <%= button_to "#", class: "btn btn-primary", method: :get do %>
          <i class="bi bi-download me-2"></i>
          Exportar Relatório
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Indicadores principais -->
  <div class="row mb-4 g-3">
    <div class="col-md-6">
      <div class="card shadow-sm border-0 p-4 text-center">
        <small class="text-blue-muted d-block mb-1">Total de Monetização</small>
        <h2 class="text-blue mb-0 fw-bold">
          <%= number_to_currency(@total_monetization, unit: "R$") %>
        </h2>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card shadow-sm border-0 p-4 text-center">
        <small class="text-blue-muted d-block mb-1">Valor Negociado Total</small>
        <h2 class="text-yellow mb-0 fw-bold">
          <%= number_to_currency(@total_negotiated, unit: "R$") %>
        </h2>
      </div>
    </div>
  </div>

  <!-- Tabela de resultados -->
  <div class="card shadow-sm border-0 rounded-4 p-3">
    <table class="table table-hover align-middle text-center mb-0">
      <thead class="table-light border-bottom">
        <tr class="text-uppercase ">
          <th class="text-blue-muted">Condomínio</th>
          <th class="text-blue-muted">Unidade</th>
          <th class="text-blue-muted">Valor Negociado</th>
          <th class="text-blue-muted">Monetização</th>
          <th class="text-blue-muted">Data</th>
        </tr>
      </thead>
      <tbody>
        <% if @filtered_revenues.present? %>
          <% @filtered_revenues.each do |rev| %>
            <tr>
              <td class="text-blue"><%= rev.condominium_name %></td>
              <td class="text-blue"><%= rev.unit || "-" %></td>
              <td class="text-blue">
                <%= number_to_currency(rev.negotiated_value, unit: "R$") %>
              </td>
              <td class="text-blue">
                <%= number_to_currency(rev.monetization, unit: "R$") %>
              </td>
              <td class="text-blue"><%= rev.date.strftime("%d/%m/%Y") %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="py-4 text-blue">
              Nenhum resultado encontrado para os filtros selecionados.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>