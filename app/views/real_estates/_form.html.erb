<%= form_with(model: @real_estate, local: true, class: "needs-validation") do |f| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title mb-3">Informações da Imobiliária</h5>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= f.label :name, "Nome", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :cnpj, "CNPJ", class: "form-label" %>
          <%= f.text_field :cnpj, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= f.label :email, "E-mail", class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :phone, "Telefone", class: "form-label" %>
          <%= f.telephone_field :phone, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title mb-3">Responsáveis</h5>

      <%= f.fields_for :responsibles do |r| %>
        <div class="border rounded p-3 mb-3">
          <div class="row mb-3">
            <div class="col-md-6">
              <%= r.label :name, "Nome", class: "form-label" %>
              <%= r.text_field :name, class: "form-control" %>
            </div>
            <div class="col-md-6">
              <%= r.label :email, "E-mail", class: "form-label" %>
              <%= r.email_field :email, class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <%= r.label :phone, "Telefone", class: "form-label" %>
              <%= r.text_field :phone, class: "form-control" %>
            </div>
            <div class="col-md-6">
              <%= r.label :position, "Cargo", class: "form-label" %>
              <%= r.text_field :position, class: "form-control" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>