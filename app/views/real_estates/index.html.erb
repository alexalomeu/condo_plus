<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center mb-3">
      <%= link_to "javascript:history.back()", class: "text-decoration-none text-blue me-3 d-flex align-items-center" do %>
        <i class="bi bi-arrow-left"></i> 
      <% end %>
      <div>
        <h2 class="fw-bold mb-0">Imobiliárias</h2>
        <small class="text-blue-muted">Cadastro e gestão de imobiliárias</small>
      </div>
    </div>
    <%= link_to "Nova Imobiliária", new_real_estate_path, class: "btn btn-primary rounded-3 px-4 py-2 fw-semibold" %>
  </div>

  <div class="card shadow-sm border-0 rounded-4 p-4">
    <table class="table align-middle">
      <thead class="border-bottom">
        <tr class="small text-uppercase">
          <th class="text-blue-muted">Logo</th>
          <th class="text-blue-muted">Nome</th>
          <th class="text-blue-muted">CNPJ</th>
          <th class="text-blue-muted">Contato</th>
          <th class="text-blue-muted">Monetização Total</th>
          <th class="text-blue-muted">Monetização Pendente</th>
          <th class="text-center text-blue-muted">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @real_estates.uniq { |r| r.name }.each do |real_estate| %>
          <tr class="align-middle">
            <!-- Logo -->
            <td class="text-center">
              <% if real_estate.logo.present? %>
                <img src="<%= real_estate.logo %>" alt="Logo" class="rounded-circle border" style="width: 45px; height: 45px; object-fit: cover;">
              <% else %>
                <i class="bi bi-building fs-4 text-secondary"></i>
              <% end %>
            </td>

            <!-- Nome -->
            <td class="text-blue"><%= real_estate.name %></td>

            <!-- CNPJ -->
            <td class="text-blue"><%= real_estate.cnpj.presence || "-" %></td>

            <!-- Contato -->
            <td class="text-blue"><%= real_estate.contact.presence || "-" %></td>

            <!-- Monetização -->
            <td class="text-blue">
              R$ <%= number_with_delimiter(real_estate.total_monetization.to_i, delimiter: ".") %>,00
            </td>
            <td class="text-blue">
              R$ <%= number_with_delimiter(real_estate.pending_monetization.to_i, delimiter: ".") %>,00
            </td>

            <!-- Ações -->
            <td class="text-center">
              <div class="d-flex justify-content-center align-items-center gap-2">
                <!-- Editar -->
                <%= link_to edit_real_estate_path(real_estate), class: "btn btn-outline-primary rounded-circle p-2 d-flex align-items-center justify-content-center", style: "width: 36px; height: 36px;" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>

                <!-- Excluir -->
                <%= button_to real_estate_path(real_estate), method: :delete, data: { confirm: "Tem certeza que deseja excluir esta imobiliária?" },
                      class: "btn btn-outline-danger rounded-circle p-2 d-flex align-items-center justify-content-center",
                      style: "width: 36px; height: 36px;" do %>
                  <i class="bi bi-trash"></i>
                <% end %>

                <!-- Relatório -->
                <%= link_to revenue_real_estate_path(real_estate), class: "btn btn-outline-primary px-3 py-1 rounded-3 fw-semibold" do %>
                  Relatório
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @real_estates.empty? %>
      <div class="text-center text-blue-muted py-4">
        Nenhuma imobiliária cadastrada ainda.
      </div>
    <% end %>
  </div>
</div>