<div class="container">
  <!-- Header -->
  <div class="d-flex align-items-center justify-content-between mb-4">
    <div class="d-flex align-items-center mb-3">
      <%= link_to "javascript:history.back()", class: "text-decoration-none text-blue me-3 d-flex align-items-center" do %>
        <i class="bi bi-arrow-left"></i>
      <% end %>
      <div>      
        <h2 class="fw-bold mb-0">Monetização</h2>
        <span class="text-blue-muted">Gestão de cobranças das imobiliárias parceiras</span>
      </div>
    </div>
    <%= link_to "#", class: "btn btn-primary d-flex align-items-center" do %>
      <i class="bi bi-download me-2"></i> Exportar Relatório
    <% end %>
  </div>

  <!-- Cards -->
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm border-0 p-4">
        <div class="d-flex align-items-center gap-3">
          <div class="bg-primary bg-opacity-10 p-3 rounded">
            <i class="bi bi-credit-card fs-4 text-yellow "></i>
          </div>
          <div>
            <p class="small mb-1">Total Recebido</p>
            <h5 class="fw-bold mb-0">R$ 1.200,00</h5>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0 p-4">
        <div class="d-flex align-items-center gap-3">
          <div class="bg-warning bg-opacity-10 p-3 rounded">
            <i class="bi bi-clock text-warning fs-4"></i>
          </div>
          <div>
            <p class="small mb-1">Pendente</p>
            <h5 class="fw-bold mb-0">R$ 1.500,00</h5>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0 p-4">
        <div class="d-flex align-items-center gap-3">
          <div class="bg-danger bg-opacity-10 p-3 rounded">
            <i class="bi bi-credit-card text-danger fs-4"></i>
          </div>
          <div>
            <p class="small mb-1">Atrasado</p>
            <h5 class="fw-bold mb-0">R$ 950,00</h5>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
      <table class="table align-middle">
        <thead class="border-bottom">
          <tr class="small text-uppercase text-blue-muted">
            <th class="text-blue-muted">Imobiliária</th>
            <th class="text-blue-muted">Condomínio</th>
            <th class="text-blue-muted">Valor</th>
            <th class="text-blue-muted">Vencimento</th>
            <th class="text-blue-muted">Status</th>
            <th class="text-end text-blue-muted">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @billings = [
            { id: 1, real_estate: "Imobiliária Prime", condominium: "Residencial Jardim das Flores", amount: "R$ 1.200,00", due_date: "25/01/2025", status: "Pago" },
            { id: 2, real_estate: "Imobiliária Top", condominium: "Condomínio Vista Verde", amount: "R$ 1.500,00", due_date: "28/01/2025", status: "Pendente" },
            { id: 3, real_estate: "Imobiliária Prime", condominium: "Edifício Solar", amount: "R$ 950,00", due_date: "20/01/2025", status: "Atrasado" }
          ] %>

          <% @billings.each do |billing| %>
            <tr>
              <td class="fw-semibold text-blue"><%= billing[:real_estate] %></td>
              <td class="text-blue"><%= billing[:condominium] %></td>
              <td class="text-blue"><%= billing[:amount] %></td>
              <td class="text-blue"><%= billing[:due_date] %></td>
              <td>
                <% badge_class = case billing[:status]
                  when "Pago" then "badge bg-success"
                  when "Pendente" then "badge bg-warning text-dark"
                  when "Atrasado" then "badge bg-danger"
                  else "badge bg-secondary"
                end %>
                <span class="<%= badge_class %>"><%= billing[:status] %></span>
              </td>
              <td class="text-end">
                <%= link_to "#", class: "btn btn-outline-primary btn-sm" do %>
                  <i class="bi bi-download me-1"></i> Baixar
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
